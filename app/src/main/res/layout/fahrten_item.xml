<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@drawable/fahrt_background">

    <TextView
        android:id="@+id/ViewZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:text=""/>
+
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/kreisStart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_fahrt"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/ViewAbfahrtsort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/darkgray"/>

        <TextView
            android:id="@+id/ViewStrecke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/darkgray"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/kreisZiel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_fahrt"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/ViewAnkunftssort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:text=""/>

    </LinearLayout>

</LinearLayout>